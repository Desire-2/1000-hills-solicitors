# Flask Configuration
SECRET_KEY=your_strong_secret_key_here

# Database Configuration (Using SQLite for initial development)
# For PostgreSQL, use: postgresql://user:password@host:port/dbname
DATABASE_URL=sqlite:///app.db

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Storage Configuration (Placeholder for S3/Cloudinary)
# S3_BUCKET_NAME=1000-hills-solicitors-docs
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Email/SMS Notification (Placeholder for Twilio/SendGrid)
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# TWILIO_PHONE_NUMBER=your_twilio_number
# SENDGRID_API_KEY=your_sendgrid_key
# SENDGRID_FROM_EMAIL=noreply@1000hills.com

# Environment
FLASK_ENV=development
FLASK_DEBUG=1
